{
  "manifest_version": 3,
  "name": "Goods Searcher Ultimate",
  "version": "4.0",
  "description": "Advanced multi-site search with 3D interface",
  "action": {
    "default_title": "Search Selected Text"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/injector.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*",
        "css/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}
